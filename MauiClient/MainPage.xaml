<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiClient"
             x:DataType="local:MainPageViewModel"
             x:Class="MauiClient.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <ListView ItemsSource="{Binding UserData}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:KeyValue">
                        <ViewCell>
                            <Grid ColumnDefinitions="*,*">
                                <Label Text="{Binding Key}" />
                                
                                <Label Grid.Column="1"
                                       Text="{Binding Value}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Sign In"
                    Command="{Binding SignInCommand}"
                    IsEnabled="{Binding LoggedOut}" />

            <Button Text="Sign Out"
                    Command="{Binding SignOutCommand}"
                    IsEnabled="{Binding LoggedIn}" />

            <Button Text="Call API"
                    Command="{Binding CallApiCommand}"
                    IsEnabled="{Binding LoggedIn}" />

            <Button Text="Get Graph Data"
                    Command="{Binding GetGraphDataCommand}"
                    IsEnabled="{Binding LoggedIn}" />

            <Label Text="{Binding ApiResult}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
